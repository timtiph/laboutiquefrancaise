{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse | La Boutique Fran√ßaise
{% endblock %}

{% block content %}
	{% form_theme form 'bootstrap_4_layout.html.twig' %}

	<h1>Ajouter une adresse</h1>

	<p>Vous pouvez renseigner une nouvelle adresse sur cette page.</p>
	<br>
	<a href="{{ path('app_account') }}">Mon compte</a>
	<hr>

	{{ form_start(form) }}

	<div class="row">

		<div class="col-md-12">{{ form_row(form.name) }}</div>

		<div class="col-md-6">{{ form_row(form.firstname) }}</div>

		<div class="col-md-6">{{ form_row(form.lastname) }}</div>

		<div class="col-md-6">{{ form_row(form.compagny) }}</div>

		<div class="col-md-6">{{ form_row(form.address) }}</div>

		<div class="col-md-6">{{ form_row(form.postal) }}</div>

		<div class="col-md-6">{{ form_row(form.city) }}</div>

		<div class="col-md-6">{{ form_row(form.country) }}</div>

		<div class="col-md-6">{{ form_row(form.phone) }}</div>

		<div class="col-md-12">{{ form_row(form.submit) }}</div>

	</div>


	{{ form_end(form) }}

	FORMULAIRE NOUVELLE ADRESSE


	<pre> {{ dump(app.user) }} </pre>
{% endblock %}
