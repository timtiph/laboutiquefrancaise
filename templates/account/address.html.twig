{% extends 'base.html.twig' %}

{% block title %}Mes adresses | La Boutique Française
{% endblock %}

{% block content %}
	<a href="{{ path('app_account_address_add') }}" class="btn btn-info btn-sm btn-address float-right">Ajouter une adresse</a>
	<h1>Mes adresses</h1>

	<p>C'est dans cet espace que vous allez pouvoir gérer vos adresses.</p>
	<br>
	<a href="{{ path('app_account') }}">Mon compte</a>
	<hr>


	{% if app.user.addresses|length == 0 %}

		<p class="text-center">Vous n'avez pas encore ajouté d'adresses dans votre compte client. Pour en ajouter une, veuillez
			<a href="{{ path('app_account_address') }}">cliquer ici</a>.
		</p><br>


	{% else %}
		<div class="row">

			{% for address in app.user.addresses %}

				<div class="col-md-4">
					<div class="card my-3" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ address.name }}</h5>
							<p class="card-text">
								{{ address.address }},<br>
								{{ address.postal }}
								{{ address.city }}
								-
								{{ address.country }}

							</p>
							<a href="{{ path('app_account_address_edit', { 'id' : address.id }) }}" class="card-link m-0">Modifier</a>
							|
							<a href="{{ path('app_account_address_delete', { 'id' : address.id }) }}" class="card-link m-0">Supprimer</a>

						</div>
					</div>

				</div>


			{% endfor %}

		</div>

	{% endif %}
{% endblock %}
